<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/viet_intro"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text_intro"
        android:text="VIETNAM'S PLACES"
        android:textSize="48sp"
        android:layout_centerInParent="true"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google Developer Group - Final Project"
        android:gravity="center"
        android:layout_below="@id/tv_text_intro"
        android:id="@+id/tv_gdg"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed by Cuong Tran Van"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_copyright"
        android:textSize="18sp"
        android:layout_below="@id/tv_gdg"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>